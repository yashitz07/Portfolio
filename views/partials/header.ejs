<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mainListDiv = document.getElementById("mainListDiv");
    const mediaButton = document.getElementById("mediaButton");

    if (mediaButton && mainListDiv) { // Check if elements exist
      mediaButton.addEventListener("click", function () {
        // Toggle the .show_list class on the main_list div
        mainListDiv.classList.toggle("show_list");
        
        // Toggle the .active class on the button for icon animation
        mediaButton.classList.toggle("active");
      });
    } else {
      console.error("Mobile menu button or list not found!");
    }

    // Optional: Close menu when a link is clicked (useful for single-page apps/anchor links)
    const navLinks = mainListDiv.querySelectorAll("ul li a");
    navLinks.forEach(link => {
      link.addEventListener("click", function() {
        if (mainListDiv.classList.contains("show_list")) {
          mainListDiv.classList.remove("show_list");
          mediaButton.classList.remove("active");
        }
      });
    });
  });
</script>
